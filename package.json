{
  "name": "frostydesktop",
  "version": "1.0.0-rc.2",
  "description": "Desktop client for frosty.gg",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "build-mac": "electron-builder build --mac --publish never",
    "appveyor-build": "electron-builder build --win --publish onTagOrDraft",
    "appveyor-build-mac": "electron-builder build --mac --publish onTagOrDraft"
  },
  "bugs": {
    "url": "https://github.com/frostygg/desktop/issues"
  },
  "homepage": "https://github.com/frostygg/desktop#readme",
  "repository": "https://github.com/frostygg/desktop",
  "author": "daniel11420/The Frosty Development Team",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.2.0"
  },
  "dependencies": {
    "discord-rpc": "^3.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.2.0",
    "minimist": ">=1.2.3"
  },
  "build": {
    "appId": "com.frostygg.desktop",
    "productName": "Frosty Desktop",
    "asar": "false",
    "win": {
      "publish": "github"
    },
    "mac": {
      "publish": "github"
    },
    "dmg": {
      "window": {
        "width": "540",
        "height": "380"
      }
    }
  }
}
